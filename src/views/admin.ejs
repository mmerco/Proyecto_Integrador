<!DOCTYPE html>
<html lang="en">
<%- include('partials/head') %>

<body>
  <%- include('partials/header-admin') %>

  <main class="admin__main container">

    <% if (msg_err) { %>
    <div class="msg__error">
      <h2 class="msg"><%= msg_err %></h2>
    </div>
    <% } %>

    <% if (msg_ok) { %>
    <div class="msg__success">
      <h2 class="msg"><%= msg_ok %></h2>
    </div>
    <% } %>

    <section class="admin__search-product">
      <form class="search-product__form" action="/admin/search" method="get">
        <button class="search-product__button" type="submit">
          <img src="/img/icons/search_icon.svg" alt="Icono de lupa de busqueda" />
        </button>
        <input class="search-product__input" type="search" name="search_value" placeholder="código, nombre o licencia" />
      </form>
    </section>
    <section class="admin__products-list">
      <div class="products-list__section">
        <h2 class="products-list__title">LISTADO DE PRODUCTOS</h2>
        <div class="products-list__add">
          <h3 class="add__title">AGREGAR</h3>
          <a class="add__link" href="/admin/create">
            <button>+</button>
          </a>
        </div>
      </div>
      <div class="products-list__section">
        <table class="products-list__table">
          <thead>
            <th class="table__header table__id">ID</th>
            <th class="table__header table__code">Código</th>
            <th class="table__header table__product">Nombre del Producto</th>
            <th class="table__header table__category">Licencia</th>
          </thead>

          <% data.forEach(item => { %>
          <tr class="table__row">
            <td class="table__id"><%= item.product_id %></td>
            <td class="table__code"><%= item.sku %></td>
            <td class="table__product"><%= item.product_name %></td>
            <td class="table__category"><%= item.license_name %></td>
            <td class="table__edit">
              <a class="table__link" href="/admin/edit/<%= item.product_id %>"><img class="table__img" src="/img/icons/edit_pencil.svg" alt="Icono lapiz" /></a>
            </td>
            <td class="table__delete">
              <a class="table__link"><img class="table__img delete__button" src="/img/icons/delete_trash.svg" alt="Icono basura" data-id="<%= item.product_id %>" /></a>
            </td>
          </tr>
          <% }) %>
        </table>
      </div>
    </section>
  </main>

  <%- include('partials/footer') %>

  <script src="../../js/deleteItem.js"></script>
  <script src="https://code.iconify.design/iconify-icon/1.0.7/iconify-icon.min.js"></script>
</body>

</html>