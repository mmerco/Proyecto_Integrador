<!DOCTYPE html>
<html lang="en">
<%- include('partials/head') %>

<body>
  <%- include('partials/header-admin') %>

  <main class="create__main container">
    <h1 class="admin__title">EDITAR ITEM</h1>
    <form method="POST" class="admin-form" action="/admin/edit/<%= item.product_id %>">
      <section class="admin-form__section space-between">
        <div class="admin-form__select">
          <label for="category" class="light-label">Categoría:</label>
          <div class="stylized-select">
            <select name="category" id="category">
              <% categorys.forEach(category => { %>

              <% if (category.category_name == item.category_name) { %>

              <option selected value="<%= category.category_name %>">
                <%= category.category_name %>
              </option>

              <% } else { %>

              <option value="<%= category.category_name %>">
                <%= category.category_name %>
              </option>

              <% } %>
              <% }) %>
            </select>
            <div class="stylized-select__arrow">
              <iconify-icon icon="iconamoon:arrow-down-2-fill" width="30px" height="30px"></iconify-icon>
            </div>
          </div>
        </div>
        <div class="admin-form__select">
          <label for="license" class="light-label">Licencia:</label>
          <div class="stylized-select">
            <select name="license" id="license">
              <% licenses.forEach(license => { %>

              <% if (license.license_name == item.license_name) { %>

              <option selected value="<%= license.license_name %>">
                <%= license.license_name %>
              </option>

              <% } else { %>

              <option value="<%= license.license_name %>">
                <%= license.license_name %>
              </option>

              <% } %>
              <% }) %>
            </select>
            <div class="stylized-select__arrow">
              <iconify-icon icon="iconamoon:arrow-down-2-fill" width="30px" height="30px"></iconify-icon>
            </div>
          </div>
        </div>
      </section>
      <section class="admin-form__section">
        <div class="admin-form__text">
          <label for="name">Nombre del Producto:</label>
          <input type="text" name="name" class="input-text__large" value="<%= item.product_name %>" required />
        </div>
      </section>
      <section class="admin-form__section">
        <textarea name="description" id="description" placeholder="Descripción del producto" required><%= item.product_description %></textarea>
      </section>
      <section class="admin-form__section">
        <div class="admin-form__text">
          <label for="code">SKU:</label>
          <input type="text" name="code" class="input-text__medium" pattern="^[A-Z]{3}\d{6}$" value="<%= item.sku %>" required />
        </div>
        <div class="admin-form__text">
          <label for="price">Precio: $</label>
          <input type="text" name="price" class="input-text__medium price" pattern="^\d+(\.\d+)?$" value="<%= item.price %>" required />
        </div>
        <div class="admin-form__text">
          <label for="stock">Stock:</label>
          <input type="text" name="stock" class="input-text__small" pattern="^\d+$" value="<%= item.stock %>" required />
        </div>
      </section>
      <section class="admin-form__section">
        <div class="admin-form__text">
          <label for="off">Descuento:</label>
          <input type="text" name="off" class="input-text__small off" pattern="^\d+$" placeholder="0" value="<%= item.discount %>" />
          <label for="off">%</label>
        </div>
        <div class="admin-form__select">
          <label for="payment">Cuotas:</label>
          <div class="stylized-select">
            <select name="payment" id="payment">
              <% dues.forEach(row => { %>

              <% if (row.dues == item.dues) { %>

              <option value="<%= row.dues %>" selected><%= row.dues %> Cuotas sin interés</option>

              <% } else { %>

              <option value="<%= row.dues %>"><%= row.dues %> Cuotas sin interés</option>

              <% } %>
              <% }) %>
            </select>
            <div class="stylized-select__arrow">
              <iconify-icon icon="iconamoon:arrow-down-2-fill" width="30px" height="30px"></iconify-icon>
            </div>
          </div>
        </div>
      </section>
      <section class="admin-form__section admin-files__section">
        <div class="admin-form__file">
          <label for="images">Imágen Frente:</label>
          <input type="file" accept="image/*" name="images" class="admin-file__front" required />
        </div>
        <div class="admin-form__file">
          <label for="images">Imágen Dorso:</label>
          <input type="file" accept="image/*" name="images" class="admin-file__back" required />
        </div>
      </section>
      <section class="admin-form__section">
        <figure class="admin-form__figure--edit admin-figure__front">
          <img src="<%= item.image_front %>" alt="" class="admin-img__front" />
          <figcaption>Frente</figcaption>
        </figure>
        <figure class="admin-form__figure--edit admin-figure__back">
          <img src="<%= item.image_back %>" alt="" class="admin-img__back" />
          <figcaption>Dorso</figcaption>
        </figure>
      </section>
      <section class="admin-form__section">
        <div class="admin-form__buttons">
          <button type="submit" class="admin__button">
            Modificar Producto
          </button>
        </div>
      </section>
    </form>
  </main>

  <%- include('partials/footer') %>

  <script src="https://code.iconify.design/iconify-icon/1.0.7/iconify-icon.min.js"></script>
  <script src="../../js/adminForm.js"></script>
</body>

</html>