<aside class="shop__aside">
  <form action="/shop<%= form_path %>" method="get" class="aside__form">
    <div class="aside-form__section">
      <label for="search" class="aside-form__label">BUSCAR</label>
      <input type="text" class="aside-form__input" name="search" placeholder="item o categoria" onchange=this.form.submit() value="<%= query.search %>" />
    </div>
    <div class="aside-form__section">
      <label for="order" class="aside-form__label">ORDENAR POR</label>
      <div class="stylized-select">
        <select name="order" onchange=this.form.submit()>
          <option value="" selected hidden disabled>Seleccionar</option>

          <% if (query.order == 'mayor') { %>
          <option value="mayor" selected>Mayor Precio</option>
          <% } else { %>
          <option value="mayor">Mayor Precio</option>
          <% } %>

          <% if (query.order == 'menor') { %>
          <option value="menor" selected>Menor Precio</option>
          <% } else { %>
          <option value="menor">Menor Precio</option>
          <% } %>

          <% if (query.order == 'az') { %>
          <option value="az" selected>A - Z</option>
          <% } else { %>
          <option value="az">A - Z</option>
          <% } %>

          <% if (query.order == 'za') { %>
          <option value="za" selected>Z - A</option>
          <% } else { %>
          <option value="za">Z - A</option>
          <% } %>

        </select>
        <div class="stylized-select__arrow">
          <iconify-icon icon="iconamoon:arrow-down-2-fill" width="30px" height="30px"></iconify-icon>
        </div>
      </div>
    </div>
    <div class="aside-form__section">
      <label for="price" class="aside-form__label">PRECIO</label>
      <div id="price" class="aside-form__price">
        <div class="form-price__section">
          <label for="min" class="form-price__label">MIN</label>
          <input type="number" class="form-price__input" name="min" min="0" placeholder="0" value="<%= query.min %>" />
        </div>
        <p class="form-price__divider">-</p>
        <div class="form-price__section">
          <label for="max" class="form-price__label">MAX</label>
          <input type="number" class="form-price__input" name="max" min="0" placeholder="0" onchange=this.form.submit() value="<%= query.max %>" />
        </div>
      </div>
    </div>
    <div class="aside-form__section">
      <label for="filter" class="aside-form__label">FILTRAR</label>
      <div id="filter" class="aside-form__checkbox">
        <div class="form-checkbox__section">
          <input class="form-checkbox__input" type="checkbox" value="new" name="new" onchange=this.form.submit() />
          <label class="form-checkbox__label" for="new">NUEVOS</label>
        </div>
        <div class="form-checkbox__section">
          <input class="form-checkbox__input" type="checkbox" value="off" name="off" onchange=this.form.submit() />
          <label class="form-checkbox__label" for="off">OFERTAS</label>
        </div>
        <div class="form-checkbox__section">
          <input class="form-checkbox__input" type="checkbox" value="special" name="special" onchange=this.form.submit() />
          <label class="form-checkbox__label" for="special">EDICIÃ“N ESPECIAL</label>
        </div>
        <div class="form-checkbox__section">
          <input class="form-checkbox__input" type="checkbox" value="fav" name="fav" onchange=this.form.submit() />
          <label class="form-checkbox__label" for="fav">FAVORITOS</label>
        </div>
      </div>
    </div>
  </form>
</aside>