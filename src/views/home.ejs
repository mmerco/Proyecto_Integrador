<!DOCTYPE html>
<html lang="en">
<%- include('partials/head') %>

<body>

  <% if (admin_header) { %>
  <%- include('partials/header-admin') %>
  <% } else { %>
  <%- include('partials/header-shop') %>
  <% } %>

  <%- include('partials/banner') %>

  <main class="home__main container">

    <% collections.forEach(collection => { %>
    <section class="collection">
      <article class="collection__info">
        <h3 class="collection__title"><%= collection.license_name %></h3>
        <p class="collection__text"><%= collection.license_description %></p>
        <a class="collection__link" href="/shop/collection/<%= collection.license_name %>">VER COLECCIÃ“N</a>
      </article>
      <picture class="collection__cover">
        <img class="collection_logo" src="<%= collection.license_image %>" alt="Logo de <%= collection.licence_name %>" />
      </picture>
    </section>
    <% }) %>

    <%- include('partials/slider') %>
  </main>

  <%- include('partials/footer') %>

  <script src="https://code.iconify.design/iconify-icon/1.0.7/iconify-icon.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@glidejs/glide"></script>
  <script src="./js/inputNumber.js"></script>
  <script src="./js/glide.js"></script>
</body>

</html>